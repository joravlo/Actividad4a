<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="Nombre "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/txtNombre"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtNombre"
        android:layout_toRightOf="@+id/txtNombre"
        android:layout_toEndOf="@+id/txtNombre"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/txtEdad" />

    <TextView
        android:text="Ciclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombre"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:layout_marginTop="15dp"
        android:id="@+id/txtCiclo" />

    <TextView
        android:text="Curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCiclo"
        android:layout_toRightOf="@+id/txtCiclo"
        android:layout_toEndOf="@+id/txtCiclo"
        android:id="@+id/txtCurso"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCurso"
        android:layout_toRightOf="@+id/txtCurso"
        android:layout_toEndOf="@+id/txtCurso"
        android:id="@+id/txtNota"
        android:layout_marginStart="20dp" />


</RelativeLayout>